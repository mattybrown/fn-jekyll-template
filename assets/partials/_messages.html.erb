<% if flash.notice || flash.alert %>

<section class="section">
  <div class="container">
    <article class="message <% if flash.notice %>is-success<% end %><% if flash.alert %>is-danger<% end %>">
      <div class="message-header">
        <p>
          <% if flash.notice %>Success<% end %>
          <% if flash.alert %>Error<% end %>
        </p>
        <button class="delete" aria-label="delete"></delete>
      </div>
      <div class="message-body">
        <% if flash.notice %><%= flash.notice %><% end %>
        <% if flash.alert %><%= flash.alert %><% end %>
      </div>
    </article>
  </div>
</section>

<% end %>
